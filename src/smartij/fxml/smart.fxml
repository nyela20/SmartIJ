                  <InnerShadow>
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </InnerShadow>
               </effect>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/ouvrir.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="buttonAddCat" maxWidth="200.0" mnemonicParsing="false" onAction="#addCategory" prefHeight="30.0" style="-fx-background-color: #B22222; -fx-border-color: white;" text="Add C" underline="true" visible="false">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/save.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </VBox>
         <VBox prefHeight="56.0" prefWidth="143.0">
            <Button fx:id="buttonAddLevel" maxWidth="200.0" mnemonicParsing="false" onAction="#addLevel" prefHeight="30.0" style="-fx-background-color: #F0F0F0; -fx-border-color: #808080;" text="Add level" visible="false">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/plus.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="buttonChangeLevel" maxWidth="200.0" mnemonicParsing="false" onAction="#changeLevel" prefHeight="30.0" style="-fx-background-color: #F0F0F0; -fx-border-color: white;" text="Change level" visible="false">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/renommer.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </VBox>
         <VBox prefHeight="43.0" prefWidth="268.0" style="-fx-border-color: black; -fx-background-color: #F9F6EF;">
            <Label fx:id="unitIGS" prefHeight="20.0" prefWidth="300.0" text="Unit list : ">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/save.png" />
                     </image>
                  </ImageView>
               </graphic></Label>
            <Label fx:id="levelname" prefHeight="20.0" prefWidth="291.0" text="Actual level : ">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/save.png" />
                     </image>
                  </ImageView>
               </graphic></Label>
            <Label fx:id="filename" prefHeight="20.0" prefWidth="300.0" text="Choose a file">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sources/images/menulogo/save.png" />
                     </image>
                  </ImageView>
               </graphic></Label>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <ImageView fitHeight="70.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../sources/images/cometh/dark.jpg" />
                  </image>
               </ImageView>
            </children>
         </VBox>
      </HBox>
   </bottom>
   <left>
      <VBox fx:id="ElementIGS" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <Pane fx:id="postitPane" prefHeight="331.0" prefWidth="536.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>

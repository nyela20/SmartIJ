<BorderPane prefHeight="1000.0" prefWidth="1000.0" style="-fx-background-color: #dcdcdc;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smartij.views.VueSmartIJ">
   <bottom>
